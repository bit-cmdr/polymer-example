doctype 5
html(lang='en', class='no-js')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='description', content='NEMP')
    meta(name='viewport', content='width=device-width')
    title= 'Node, Express, Mongo, Polymer (NEMP)'
  script(src='/content/components/modernizr/modernizr.js')
  link(rel='stylesheet', href='/polymer-ui/basic.css')
  link(rel='stylesheet', href='/content/css/main.css')
  block css
  script(scr='/content/components/polymer/polymer.min.js')
  link(rel='import', href='/polymer-ui/polymer-ui-toolbar/polymer-ui-toolbar.html')
  link(rel='import', href='/polymer-ui/polymer-ui-icon-button/polymer-ui-icon-button.html')
  block imports
  body.polymer-ui-body-text(theme='polymer-ui-dark-theme')
    polymer-ui-toolbar
        polymer-ui-icon-button(icon='menu')
        div(flex) Title
        polymer-ui-toolbar(responsive)
        polymer-ui-icon-button(icon='settings')
          polymer-ui-menu(selected='1')
            polymer-ui-menu-item(label='Light')
            polymer-ui-menu-item(label='Dark')
    section(id='main')
      block content
    block scripts